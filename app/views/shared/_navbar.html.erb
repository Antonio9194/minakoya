<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "home.gif", style: "width: 60px; height: 60px;" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to rooms_path, class: "nav-link d-flex align-items-center" do %>
              <%= image_tag "rooms.png", style: "width: 20px; height: 20px;", class: "me-1" %>
              Rooms
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to contact_messages_path, class: "nav-link d-flex align-items-center" do %>
              <%= image_tag "contact.png", style: "width: 20px; height: 20px;", class: "me-1" %>
              Contact Us
            <% end %>
          </li>
              <li class="nav-item">
            <%= link_to abouts_path, class: "nav-link d-flex align-items-center" do %>
              <%= image_tag "about.png", style: "width: 20px; height: 20px;", class: "me-1" %>
              About Us
            <% end %>
          </li>
              <li class="nav-item">
            <%= link_to faqs_path, class: "nav-link d-flex align-items-center" do %>
              <%= image_tag "contact.png", style: "width: 20px; height: 20px;", class: "me-1" %>
              FAQs
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
