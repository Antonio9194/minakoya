<div style="display: flex; flex-direction: column; justify-content: center; align-items:center">
  <!-- User Card -->
  <div class="card shadow my-4 p-3 rounded-5 d-flex flex-column justify-content-center align-items-center" style="width: 220px; height: 100px;">
    <h6><%= current_user.first_name%></h6>
    <p class="text-muted mb-0">Joined in <%= current_user.created_at.strftime("%B-%Y") %></p>
  </div>
  <!-- Bookings -->
  <div>
    <% if current_user.bookings.present? %>
      <% current_user.bookings.each do |booking|%>
        <%= booking.room_id%>
        <%= booking.start_date%>
        <%= booking.end_date%>
      <% end %>
    <% else %>
      <p>No bookings yet...</p>  
    <% end %>
  </div>
  <!-- Messages-->
  <div>
    <% current_user.contact_messages.each do |message| %>
      <div>
        <%= message.message%>
      </div>
    <% end %>
  </div>
</div>
