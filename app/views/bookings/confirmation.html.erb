<!-- app/views/bookings/confirmation.html.erb -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Success Card -->
      <div class="card shadow border-success">
        <div class="card-header bg-success text-white text-center py-4">
          <h1 class="mb-0">
            <i class="fas fa-check-circle fa-3x mb-3"></i>
            <br>
            Payment Successful!
          </h1>
        </div>
        <div class="card-body p-4">
          <!-- Success Message -->
          <div class="alert alert-success">
            <h4>Your booking is confirmed!</h4>
            <p class="mb-0">Thank you for your payment.</p>
          </div>
          <!-- Booking Details -->
          <h4 class="mt-4 mb-3">Booking Details</h4>
          <hr>
          <div class="row mb-2">
            <div class="col-6"><strong>Booking ID:</strong></div>
            <div class="col-6">#<%= @booking.id %></div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Room:</strong></div>
            <div class="col-6"><%= @booking.room.name %></div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Check-in:</strong></div>
            <div class="col-6"><%= @booking.start_date.strftime("%B %d, %Y") %></div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Check-out:</strong></div>
            <div class="col-6"><%= @booking.end_date.strftime("%B %d, %Y") %></div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Nights:</strong></div>
            <div class="col-6"><%= @booking.number_of_nights %></div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Total Paid:</strong></div>
            <div class="col-6">
              <h5 class="text-success mb-0">Â¥<%= number_with_delimiter(@booking.total_price_cents) %></h5>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Payment Status:</strong></div>
            <div class="col-6">
              <span class="badge bg-success">Paid</span>
            </div>
          </div>
          <hr class="my-4">
          <!-- Action Buttons -->
          <div class="d-grid gap-2">
            <%= link_to "Back to Home", root_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
